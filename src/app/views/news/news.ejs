<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEWS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="" class="navbar-brand mx-auto">NEWS</a>
    </nav>

    <div class="container col-md-10">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>News</th>
                        <th>Actions</th>
                        <th>Actions</th>
                    </tr>
                    <% for(var i = 0; i < news.length; i++) {  %>
                    <tr>
                        <td><%= news[i].id_news %></td>
                        <td><%= news[i].title %></td>
                        <td><%= news[i].news %></td>
                        <td>
                            <form action="/delete/<%= news[i].id_news%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger" type="submit">Eliminar</button>
                            </form>
                        </td>
                        <td>
                            <a href="/edit/<%=news[i].id_news%>"><button class="btn btn-warning">Editar</button></a>
                        </td>
                    </tr>
                    <% } %>

                </table>
            </div>
            <div class="col-md-6 mt-4card">
                <form action="/news" method="POST" class="card-body">
                    <h3 class="card-title">Add News</h3>
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Title" required autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="news" class="form-control" placeholder="News" required>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Guardar">
                </form>
            </div>
            
        </div>
    </div>
</body>

</html>